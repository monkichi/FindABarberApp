<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chris.firebasefindservices.MainActivity">

    <EditText
        android:id="@+id/userNameEmailAddressEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/userPasswordEditText"
        android:layout_alignLeft="@+id/userPasswordEditText"
        android:layout_alignStart="@+id/userPasswordEditText"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="Enter Email Address"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="161dp" />

    <EditText
        android:id="@+id/userPasswordEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/signInButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="233dp" />

    <Button
        android:id="@+id/signInButton"
        android:layout_width="64dp"
        android:layout_height="35dp"
        android:text="Sign In"
        android:textSize="8sp"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="284dp"
        android:layout_marginBottom="158dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/signUpClickableTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="456dp"
        android:layout_marginBottom="78dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
